{
    "compilerOptions": {
        "outDir": "lib",
        "module": "commonjs",
        "lib": [
            "es6",
            "dom"
        ],
        "target": "es2016",
        "declaration": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "sourceMap": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true
    },
    "include": [ "**/*.ts" ],
    "exclude": [ "node_modules" ]
}
